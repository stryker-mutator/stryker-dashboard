{
  "compilerOptions": {
    "module": "node18",
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "lib": ["DOM", "ES2023"],
    "types": [],
    "noImplicitReturns": true,
    "noUnusedLocals": false, // verified using eslint
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2023",
    "strictPropertyInitialization": false // TODO
  }
}
