{
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "forceConsistentCasingInFileNames": false,
    "lib": [
      "es5",
      "es2015"
    ],
    "types": [
      "node"
    ],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "strictPropertyInitialization": false // TODO
  }
}