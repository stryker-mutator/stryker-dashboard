{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "forceConsistentCasingInFileNames": false,
    "lib": ["es5", "es2015"],
    "types": ["node"],
    "noImplicitReturns": true,
    "noUnusedLocals": false, // verified using eslint
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "strictPropertyInitialization": false // TODO
  }
}
