{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "coverageAnalysis": "perTest",
  "mochaOptions": {
    "spec": ["dist/test/helpers/**/*.js", "dist/test/unit/**/*.js"]
  },
  "testRunner": "mocha",
  "reporters": ["progress", "html", "dashboard"],
  "concurrency": 4,
  "dashboard": {
    "reportType": "full"
  },
  "buildCommand": "tsc -b",
  "thresholds": { "break": 50 },
  "plugins": ["@stryker-mutator/*", "@stryker-mutator/mocha-runner"]
}
