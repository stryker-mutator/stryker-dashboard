  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Unit tests",
      "program": "${workspaceRoot}/../../node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "bdd",
        "--no-timeout",
        "--colors",
        "${workspaceRoot}/dist/test/helpers/**/*.js",
        "${workspaceRoot}/dist/test/unit/**/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
