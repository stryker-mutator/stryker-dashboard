    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests",
            "program": "${workspaceFolder}/../../node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/dist/test/helpers/**/*.js",
                "${workspaceFolder}/dist/test/unit/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}